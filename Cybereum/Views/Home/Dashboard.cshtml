    <h4>Dashboard</h4>
</div>
<div class="box">
    <div class="container">
        <div class="row">

            @if (Convert.ToInt32(Session["RoleId"]) == 2)
            {
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

                    <div class="box-part text-center">

                        <i class="fa fa-facebook fa-3x" aria-hidden="true"></i>

                        <div class="title">
                            <h4>Users</h4>
                        </div>

                        <a href="@Url.Action("Index", "User")">
