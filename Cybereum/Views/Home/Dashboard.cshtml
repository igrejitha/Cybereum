                            <h4>Projects</h4>
                        </div>

                        <a href="@Url.Action("Index", "Project")">
                            <h4>
                                @if (ViewBag.countProject != null)
                                {
                                    @ViewBag.countProject;
                                }
                            </h4>
                        </a>

                    </div>
                </div>
            }

            

            @if (Convert.ToInt32(Session["RoleId"]) == 3)
            {

                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

                    <div class="box-part text-center">

                        <i class="fa fa-facebook fa-3x" aria-hidden="true"></i>

                        <div class="title">
                            <h4>Task</h4>
                        </div>

                        <a href="@Url.Action("Index", "Task")">
                            <h4>
                                @if (ViewBag.countTask != null)
                                {
                                    @ViewBag.countTask;
                                }
                            </h4>
                        </a>

                    </div>
                </div>
            }
        </div>
    </div>
</div>
