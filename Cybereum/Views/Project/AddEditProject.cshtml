                                                    new SelectListItem{ Text="Olympic Games", Value = "Olympic Games" },
                                                    new SelectListItem{ Text="Nuclear power PWR", Value = "Nuclear power PWR" },
                                                    new SelectListItem{ Text="Nuclear power BWR", Value = "Nuclear power BWR" },
                                                    new SelectListItem{ Text="Nuclear power PHWR", Value = "Nuclear power PHWR" },
                                                    new SelectListItem{ Text="Hydroelectric dams", Value = "Hydroelectric dams" },
                                                    new SelectListItem{ Text="Flood control", Value = "Flood control" },
                                                    new SelectListItem{ Text="Transportation", Value = "Transportation" },
                                                    new SelectListItem{ Text="Utilities", Value = "Utilities" },
                                                    new SelectListItem{ Text="IT", Value = "IT" },
                                                    new SelectListItem{ Text="Nonhydroelectric dams", Value = "Nonhydroelectric dams" },
                                                    new SelectListItem{ Text="Buildings", Value = "Buildings" },
                                                    new SelectListItem{ Text="Aerospace", Value = "Aerospace" },
                                                    new SelectListItem{ Text="Defense", Value = "Defense" },
                                                    new SelectListItem{ Text="Bus rapid transit", Value = "Bus rapid transit" },
                                                    new SelectListItem{ Text="Rail", Value = "Rail" },
                                                    new SelectListItem{ Text="Airports", Value = "Airports" },
                                                    new SelectListItem{ Text="Tunnels", Value = "Tunnels" },
                                                    new SelectListItem{ Text="Oil and Gas", Value = "Oil and Gas" },
                                                    new SelectListItem{ Text="Offshore Oil and Gas", Value = "Offshore Oil and Gas" },
                                                    new SelectListItem{ Text="Ports", Value = "Ports" },
                                                    new SelectListItem{ Text="Hospitals, health", Value = "Hospitals, health" },
                                                    new SelectListItem{ Text="Mining", Value = "Mining" },
                                                    new SelectListItem{ Text="Bridges", Value = "Bridges" },
                                                    new SelectListItem{ Text="Water", Value = "Water" },
                                                    new SelectListItem{ Text="Fossil thermal power", Value = "Fossil thermal power" },
                                                    new SelectListItem{ Text="Roads", Value = "Roads" },
                                                    new SelectListItem{ Text="Pipelines", Value = "Pipelines" },
                                                    new SelectListItem{ Text="Wind power", Value = "Wind power" },
                                                    new SelectListItem{ Text="Offshore Wind", Value = "Offshore Wind" },
                                                    new SelectListItem{ Text="Energy transmission", Value = "Energy transmission" },
                                                    new SelectListItem{ Text="Solar power", Value = "Solar power" },
                                                    new SelectListItem{ Text="Metro", Value = "Metro" },
                                                    new SelectListItem{ Text="Other", Value = "Other" }
                                               }, htmlAttributes: new { @class = "form-control" })
                                                                @Html.ValidationMessageFor(model => model.projecttype, "", new { @class = "text-danger" })
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                    <div id="navpills-2" class="tab-pane">
                                        <div class="row">
                                            @if (Convert.ToInt32(Session["RoleId"]) == 4)
                                            {
                                                <div class="col-md-12">
                                                    @Html.LabelFor(model => model.projectmanager, "Project Manager", htmlAttributes: new { @class = "" })
                                                    @Html.DropDownList("projectmanager", null, htmlAttributes: new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(model => model.projectmanager, "", new { @class = "text-danger" })
                                                </div>
                                            }
                                            else
                                            {
                                                @Html.HiddenFor(model => model.projectmanager)
                                            }
                                            <div class="col-md-12">
                                                @*<div class="form-group">*@
                                                    @Html.Label("Project Members", htmlAttributes: new { @class = "" })
                                                    <div class="container need" style="margin-top: 0 !important;">
                                                        <div class="row">
                                                            <div class="col ">
                                                                <select id="multiselect_dropdown_styles" class="form-control multi-form" name="projectmembers" multiple multiselect-search="true" multiselect-select-all="true" multiselect-max-items="100">
                                                                    @if (ViewBag.projectmembers != null)
                                                                    {
                                                                        foreach (var item in ViewBag.projectmembers)
                                                                        {
                                                                            if (item.Text != null)
                                                                            {
                                                                                if (item.Selected == true)
                                                                                {
                                                                                    <option id="@item.Value" value="@item.Value" selected="selected">
                                                                                        @item.Text
                                                                                    </option>
                                                                                }
                                                                                else
                                                                                {
                                                                                    <option id="@item.Value" value="@item.Value">
                                                                                        @item.Text
                                                                                    </option>
                                                                                }
                                                                            }
                                                                        }
                                                                    }
                                                                </select>
                                                            </div>
                                                        </div>
                                                    </div>                                                    
                                                @*</div>*@                                                
                                            </div>
                                        </div>
                                    </div>


                                    <div class="row" style="padding-top: 30px;">
                                        <div class="col-6">
                                            <a href="@Url.Action("Projectportfoliodashboard", "Projectportfoliodashboard")"><h4>Back</h4></a>
                                        </div>
                                        <div class="col-6">
                                            <input type="submit" name="btnSubmit" value="Save" class="btn btn" style="background-color: #0D2136; color: white;" />
                                        </div>

                                    </div>


                                </div>

                            }
                        </div>
                    </div>
                </div>
            </div>
            </div>
        </div>
    </div>
